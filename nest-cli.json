{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "./assets/**.scss",
        "outDir": "./assets/",
        "watchAssets": true
      }
    ],
    "deleteOutDir": true
  }
}

